if grep -q net.ipv4.tcp_window_scaling <<< `cat /etc/sysctl.conf`; then
    sed -i 's/net.ipv4.tcp_window_scaling = ./net.ipv4.tcp_window_scaling = 0/' /etc/sysctl.conf
