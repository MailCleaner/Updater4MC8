    cp SweepViruses.pm SweepViruses.pm_add_esetefs_av
    patch -i 73_Add_ESET_EFS_AV_support_SweepViruses.patch SweepViruses.pm
    rm -f 73_Add_ESET_EFS_AV_support_SweepViruses.patch
